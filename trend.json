{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "trendd.csv"
    },
    "vconcat": [
      {
        "width": 480,
        "mark": "line",
        "encoding": {
          "x": {
            "field": "YearMonth",
            "type": "temporal",
            "axis": {"title": "Year-Month"},
            "scale": {"domain": {"param": "brush"}}
          },
          "y": {
            "field": "Count_of_Crash",
            "type": "quantitative",
            "title": "Crash Count"
          },
          "color": {
            "field": "STATE_NAME",
            "type": "nominal",
            "title": "State"
          }
        },
        "transform": [
          {
            "calculate": "toDate(datum.Year + '-' + datum.Month + '-01')",
            "as": "YearMonth"
          }
        ]
      },
      {
        "width": 480,
        "height": 60,
        "mark": "line",
        "params": [
          {
            "name": "brush",
            "select": {"type": "interval", "encodings": ["x"]}
          }
        ],
        "encoding": {
          "x": {
            "field": "YearMonth",
            "type": "temporal",
            "axis": {"title": "Year-Month"}
          },
          "y": {
            "field": "Count_of_Crash",
            "type": "quantitative",
            "axis": {"tickCount": 3, "grid": false},
            "title": null
          },
          "color": {
            "field": "STATE_NAME",
            "type": "nominal",
            "legend": null
          }
        },
        "transform": [
          {
            "calculate": "toDate(datum.Year + '-' + datum.Month + '-01')",
            "as": "YearMonth"
          }
        ]
      }
    ]
  }
  