{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "values": [
        {"Category": "Bus Involvement", "Condition": "No", "CrashCount": 5213},
        {"Category": "Bus Involvement", "Condition": "Yes", "CrashCount": 78},
        {"Category": "Heavy Rigid Truck Involvement", "Condition": "No", "CrashCount": 4927},
        {"Category": "Heavy Rigid Truck Involvement", "Condition": "Yes", "CrashCount": 364}
      ]
    },
    "transform": [
      {
        "joinaggregate": [
          {"op": "sum", "field": "CrashCount", "as": "TotalCrashCount"}
        ],
        "groupby": ["Category"]
      },
      {
        "calculate": "datum.TotalCrashCount / 2",
        "as": "HalfTotalCrashCount"
      }
    ],
    "layer": [
      {
        "mark": {"type": "arc", "innerRadius": 50, "outerRadius": 100},
        "encoding": {
          "theta": {
            "field": "HalfTotalCrashCount",
            "type": "quantitative"
          },
          "color": {
            "field": "Category",
            "type": "nominal",
            "legend": {
              "title": "Involvement Type", 
              "orient" : "right",
            "offset": 50},
            "scale": {"scheme": "accent"}
          },
          "tooltip": [
            {"field": "Category", "type": "nominal", "title": "Involvement Type"},
            {"field": "TotalCrashCount", "type": "quantitative", "title": "Total Crashes"}
          ]
        }
      },
      {
        "mark": {"type": "arc", "innerRadius": 100, "outerRadius": 150},
        "encoding": {
          "theta": {
            "field": "CrashCount",
            "type": "quantitative"
          },
          "color": {
            "field": "Condition",
            "type": "nominal",
            "legend": {"title": "Yes/No Condition"},
            "scale": {"scheme": "tableau20"}
          },
          "order": {"field": "Category", "type": "nominal"},
          "tooltip": [
            {"field": "Category", "type": "nominal", "title": "Involvement Type"},
            {"field": "Condition", "type": "nominal", "title": "Yes/No Condition"},
            {"field": "CrashCount", "type": "quantitative", "title": "Crash Count"}
          ]
        }
      }
    ],
    "view": {"stroke": null}
  }
  
  