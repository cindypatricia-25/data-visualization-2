{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Pie chart for Alcohol test crash count with custom colors",
    "data": {
      "values": [
        {"Alcohol Test": "Yes", "CrashCount": 137},
        {"Alcohol Test": "No", "CrashCount": 595}
      ]
    },
    "background": "#fafafa",
    "mark": {"type": "arc", "innerRadius": 50},
    "encoding": {
      "theta": {"field": "CrashCount", "type": "quantitative"},
      "color": {
        "field": "Alcohol Test", 
        "type": "nominal",
        "scale": {
          "domain": ["Yes", "No"],
          "range": ["#5e2917", "#f5a75b"]  
        }
      },
      "tooltip": [{"field": "Alcohol Test"}, {"field": "CrashCount"}]
    }
  }
  