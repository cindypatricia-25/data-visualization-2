{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 850,
    "height": 500,
    "background": "#fafafa",
    
    "params": [
      {
        "name": "StateSelection",
        "bind": {
          "input": "select",
          "options": [
            "All States",
            "New South Wales",
            "Victoria",
            "Queensland",
            "Western Australia",
            "South Australia",
            "Tasmania",
            "Northern Territory",
            "Australian Capital Territory"
          ],
          "name": "Select State: "
        },
        "value": "All States"
      }
    ],
  
    "data": {
      "url": "js/topolga.json",
      "format": {
        "type": "topojson",
        "feature": "georef-australia-local-government-area@public"
      }
    },
  
    "transform": [
      {
        "lookup": "properties.lga_name[0]",
        "from": {
          "data": {
            "url": "lga.csv"
          },
          "key": "LGA",
          "fields": ["CountCrash"]
        }
      },
      {"calculate": "datum.CountCrash + 0.1", "as": "Total crashes"},
      {
        "filter": "StateSelection === 'All States' || datum.properties.ste_name[0] === StateSelection"
      }
    ],
  
    "projection": {
      "type": "mercator"
    },
  
    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeWidth": 1
        },
        "encoding": {
          "color": {
            "field": "CountCrash",
            "type": "quantitative",
            "scale": {
              "type": "log",
              "scheme": "purpleblue"
            },
            "legend": {
              "title": "Crash Count"
            }
          },
          "tooltip": [
            {
              "field": "properties.lga_name[0]",
              "type": "nominal",
              "title": "LGA"
            },
            {
              "field": "CountCrash",
              "type": "quantitative",
              "title": "Crash Count normalized by population"
            }
          ]
        }
      }
    ]
  }
  